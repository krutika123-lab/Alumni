<% layout("/layouts/boilerplate.ejs") %>
<h2 class="text-2xl font-bold text-center mb-6">Edit Alumni Post</h2>

<form action="/alumni/post/<%= post._id %>?_method=PUT"
      method="POST" enctype="multipart/form-data"
      class="max-w-3xl mx-auto bg-gray-800 p-6 rounded-xl space-y-4">

  <input type="text" name="name" value="<%= post.name %>"
         class="w-full p-2 rounded bg-gray-700 text-white" required>
  <input type="text" name="company" value="<%= post.company %>"
         class="w-full p-2 rounded bg-gray-700 text-white" required>
  <input type="email" name="email" value="<%= post.email %>"
         class="w-full p-2 rounded bg-gray-700 text-white" required>
  <input type="text" name="experience" value="<%= post.experience %>"
         class="w-full p-2 rounded bg-gray-700 text-white">
  <input type="text" name="skills" value="<%= post.skills.join(', ') %>"
         class="w-full p-2 rounded bg-gray-700 text-white">

  <p class="text-sm text-gray-300">Current Image:</p>
  <img src="<%= post.image %>" class="w-24 h-24 rounded-full mb-2">
  <input type="file" name="image" accept="image/*">

  <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 p-2 rounded-lg">
    Update Post
  </button>
</form>
