<% layout("/layouts/boilerplate.ejs") %>

<!doctype html>
<html lang="en" class="h-full" data-theme="dark">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Events • Cummins College of Engineering, Nagpur</title>

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: { container: { center: true, padding: "1rem" } }
      }
    }
  </script>

  <!-- Persist theme -->
  <script>
    (function () {
      const saved = localStorage.getItem("theme");
      const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
      const theme = saved || (prefersDark ? "dark" : "light");
      document.documentElement.dataset.theme = theme;
      document.documentElement.classList.toggle("dark", theme === "dark");
    })();
  </script>

  <style>
    :root {
      --bg: #0b1220;
      --card: #111827;
      --muted: #93a2b1;
      --text: #e5e7eb;
      --ring: #243b53;
    }
    :root[data-theme="light"] {
      --bg: white;
      --card: #f8fafc;
      --muted: #475569;
      --text: #0f172a;
      --ring: #e2e8f0;
    }
    html {
      background: var(--bg);
      color: var(--text);
      transition: background 0.3s ease, color 0.3s ease;
    }
  </style>
</head>
<body class="min-h-full bg-[var(--bg)]">

  <!-- Header -->
  <header class="border-b border-[var(--ring)]/40 sticky top-0 backdrop-blur bg-[var(--bg)]/80 z-40">
    <div class="container flex items-center justify-between py-4 gap-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-indigo-600/90"></div>
        <div>
          <h1 class="text-xl font-semibold">Cummins College of Engineering, Nagpur</h1>
          <p class="text-sm text-[var(--muted)]">Upcoming Events & Activities Hub</p>
        </div>
      </div>
    </div>
  </header>

  <!-- Hero -->
  <section class="container py-10 text-center md:text-left">
    <div class="grid md:grid-cols-2 gap-6 items-center">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold leading-tight">
          Cummins College of Engineering Upcoming Events
        </h2>
        <p class="mt-3 text-[var(--muted)]">
          Join our vibrant campus life! Explore <span class="font-semibold"> Upcoming club activities</span>, engaging workshops, and exciting fests that bring together creativity, learning, and fun.
          Stay aware and keep checking for <span class="text-indigo-400 font-medium">new upcoming events</span>—there’s always something happening at CCOEW Nagpur!
        </p>
        <div class="mt-6 flex gap-3 justify-center md:justify-start">
          <a href="#student-events" class="px-4 py-2 rounded-xl bg-indigo-600 hover:bg-indigo-500">View Student Events</a>
          <a href="#new-event" class="px-4 py-2 rounded-xl border border-[var(--ring)]/60 hover:bg-[var(--card)]">Add Your Event</a>
        </div>
      </div>
      <img
  class="h-80 w-full object-cover rounded-2xl shadow-xl border border-[var(--ring)]/40 cursor-pointer"
  alt="Club Activities at Cummins College"
  src="https://media-exp1.licdn.com/dms/image/C5622AQFWoRnw2AG0yA/feedshare-shrink_800/0/1664526075308?e=2147483647&v=beta&t=rvt_9BgNIyD15c4YN0WGwUZ_SwRGCb4mXTP3OwEHEK0"
/>

    </div>
  </section>

  <!-- Awareness Section -->
  <section class="container py-6 event-section">
    <h3 class="text-2xl font-semibold mb-2">Why Participate in Club Activities?</h3>
    <p class="text-[var(--muted)] mb-6">
      Club activities at Cummins College are more than just events—they are opportunities to learn, network, and grow.
      From <span class="font-medium">technical workshops</span> and <span class="font-medium">sports tournaments</span> to <span class="font-medium">cultural fests</span>, each event is designed to bring out the best in our students.
      Don’t miss out—stay tuned and regularly check for <span class="text-indigo-400 font-semibold">new upcoming events</span> on this portal!
    </p>
  </section>

  <!-- Student Events -->
  <section id="student-events" class="container py-10 event-section">
    <div class="flex items-center justify-between mb-2">
      <h3 class="text-2xl font-semibold">Student-submitted Events</h3>
      <a href="#new-event" class="text-sm px-3 py-2 rounded-lg border border-[var(--ring)]/50 hover:bg-[var(--card)]">Add New</a>
    </div>

    <!-- Search -->
    <div class="mb-4">
      <input
        type="text"
        id="studentEventSearch"
        placeholder="Search events by title, club, or description..."
        class="w-full sm:w-1/2 px-4 py-2 rounded-lg border border-[var(--ring)]/40 bg-[var(--card)] focus:outline-none focus:ring-2 focus:ring-indigo-500"
      />
    </div>

    <% if (uupcoming && uupcoming.length) { %>
      <div id="eventsGrid" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% uupcoming.forEach(e => { %>
          <article
            class="event-card rounded-2xl text-white overflow-hidden border border-[var(--ring)]/40 bg-[var(--card)]"
            data-title="<%= e.title.toLowerCase() %>"
            data-desc="<%= e.description.toLowerCase() %>"
          >
            <% if (e.image) { %>
              <img class="h-40 w-full object-cover cursor-pointer" src="<%= e.image %>" alt="<%= e.title %>"/>
            <% } %>
            <div class="p-4">
              <h4 class="event-title text-lg font-semibold"><%= e.title %></h4>
              <p class="text-sm text-[var(--muted)] mt-1">Organized by <span class="font-medium"><%= e.clubName %></span></p>
              <p class="text-sm text-[var(--muted)] mt-1">Date: <%= new Date(e.date).toLocaleDateString() %></p>
              <p class="event-desc text-sm text-[var(--muted)] mt-2"><%= e.description %></p>
              <p class="text-sm font-medium mt-2">Fees: ₹<%= e.fees %></p>
              <p class="text-[10px] text-[var(--muted)] mt-3">Posted <%= new Date(e.createdAt).toLocaleString() %></p>
            </div>
            <div class="flex justify-end gap-2 mt-4">
  <form action="/alumni/upcoming/<%= e._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this event?');">
    <button class="px-3 py-2 mr-4 mb-4 text-sm rounded-lg bg-red-600 hover:bg-red-500">Delete</button>
  </form>
</div>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-[var(--muted)]">No student events yet. Be the first to add one!</p>
    <% } %>
  </section>

  <!-- Add Event Form -->
  <section id="new-event" class="container py-10">
    <h3 class="text-2xl font-semibold mb-4">Add an Event</h3>
    <form action="/alumni/upcoming" method="POST" enctype="multipart/form-data"
      class="grid md:grid-cols-2 gap-6 bg-[var(--card)] p-6 rounded-2xl border border-[var(--ring)]/40">

      <!-- Left Column -->
      <div class="grid gap-4">
        <div>
          <label class="block text-sm mb-1">Event Title</label>
          <input name="title" required maxlength="200"
            class="w-full px-3 py-2 rounded-xl border border-[var(--ring)]/50 bg-transparent outline-none"
            placeholder="e.g., Annual Tech Fest"/>
        </div>

        <div>
          <label class="block text-sm mb-1">Organizing Club</label>
          <input name="clubName" required maxlength="100"
            class="w-full px-3 py-2 rounded-xl border border-[var(--ring)]/50 bg-transparent outline-none"
            placeholder="e.g., Robotics Club"/>
        </div>

        <div>
          <label class="block text-sm mb-1">Event Date</label>
          <input type="date" name="date" required
            class="w-full px-3 py-2 rounded-xl border border-[var(--ring)]/50 bg-transparent outline-none"/>
        </div>
      </div>

      <!-- Right Column -->
      <div class="grid gap-4">
        <div>
          <label class="block text-sm mb-1">Description</label>
          <textarea name="description" required maxlength="2000" rows="6"
            class="w-full px-3 py-2 rounded-xl border border-[var(--ring)]/50 bg-transparent outline-none"
            placeholder="Tell everyone what's happening..."></textarea>
        </div>

        <div>
          <label class="block text-sm mb-1">Registration Fees (₹)</label>
          <input type="number" name="fees" min="0"
            class="w-full px-3 py-2 rounded-xl border border-[var(--ring)]/50 bg-transparent outline-none"
            placeholder="Enter amount (0 for free)"/>
        </div>

        <!-- Image Upload -->
        <div>
          <label class="block text-sm mb-1">Upload Event Image</label>
          <input type="file" name="image" accept="image/*"
            class="w-full block text-sm file:mr-4 file:py-2 file:px-3 file:rounded-lg file:border-0
                   file:bg-indigo-600 file:text-white hover:file:bg-indigo-500"/>
          <p class="text-xs text-[var(--muted)] mt-1">or paste an image URL below</p>
          <input type="url" name="imageUrl"
            class="w-full mt-2 px-3 py-2 rounded-xl border border-[var(--ring)]/50 bg-transparent outline-none"
            placeholder="https://example.com/image.jpg"/>
        </div>

        <div class="flex items-end">
          <button class="w-full px-4 py-2 rounded-xl bg-indigo-600 hover:bg-indigo-500">Submit Event</button>
        </div>
      </div>
    </form>
  </section>

  <footer class="container py-1 text-center text-sm text-[var(--muted)]">
    © <%= new Date().getFullYear() %> Cummins College of Engineering, Nagpur. All rights reserved.
  </footer>

  <!-- Image Modal -->
  <div id="imageModal" class="hidden fixed inset-0 bg-black/80 flex items-center justify-center z-50">
    <span id="closeModal" class="absolute top-5 right-8 text-white text-3xl cursor-pointer">&times;</span>
    <img id="modalImage" class="max-h-[90%] max-w-[90%] rounded-xl shadow-lg" src="" alt="Enlarged view"/>
  </div>

  <script>
    // ✅ Smart Search Function
    document.getElementById("studentEventSearch").addEventListener("input", function () {
      const query = this.value.toLowerCase();
      const cards = document.querySelectorAll("#eventsGrid .event-card");
      cards.forEach(card => {
        const title = card.dataset.title;
        const desc = card.dataset.desc;
        if (title.includes(query) || desc.includes(query)) {
          card.style.display = "block";
        } else {
          card.style.display = "none";
        }
      });
    });

    // ✅ Theme Toggle
    const toggleBtn = document.getElementById("themeToggle");
    if (toggleBtn) {
      toggleBtn.addEventListener("click", () => {
        const html = document.documentElement;
        const newTheme = html.dataset.theme === "dark" ? "light" : "dark";
        html.dataset.theme = newTheme;
        html.classList.toggle("dark", newTheme === "dark");
        localStorage.setItem("theme", newTheme);
      });
    }

    // ✅ Image Modal Functionality
    document.querySelectorAll(".event-card img, section img").forEach(img => {
      img.addEventListener("click", () => {
        document.getElementById("modalImage").src = img.src;
        document.getElementById("imageModal").classList.remove("hidden");
      });
    });

    document.getElementById("closeModal").addEventListener("click", () => {
      document.getElementById("imageModal").classList.add("hidden");
    });

    document.getElementById("imageModal").addEventListener("click", (e) => {
      if (e.target.id === "imageModal") {
        document.getElementById("imageModal").classList.add("hidden");
      }
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") {
        document.getElementById("imageModal").classList.add("hidden");
      }
    });
  </script>
</body>
</html>
