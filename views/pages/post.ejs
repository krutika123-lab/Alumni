  <section class="p-6 bg-gray-800 mt-6 rounded-xl shadow-lg max-w-3xl mx-auto">
    <h2 class="text-xl font-semibold text-purple-300 mb-4">Send Email</h2>
    <textarea id="studentEmails" placeholder="Enter student emails (comma separated)"
      class="w-full p-3 rounded-lg bg-gray-700 border border-gray-600 text-white mb-3"></textarea>
    <textarea id="message" placeholder="Enter your message to alumni..."
      class="w-full p-3 rounded-lg bg-gray-700 border border-gray-600 text-white mb-3"></textarea>
    <button onclick="sendEmail()" 
      class="w-full bg-green-600 hover:bg-green-500 p-3 rounded-lg font-semibold">Send Email to Selected Alumni</button>
  </section>

  <script>

    document.getElementById("alumniForm").addEventListener("submit", function (e) {
      e.preventDefault();

      const name = document.getElementById("name").value;
      const company = document.getElementById("company").value;
      const email = document.getElementById("email").value;
      const experience = document.getElementById("experience").value;
      const skills = document.getElementById("skills").value;
      const imageInput = document.getElementById("image");
      let imgURL = "https://via.placeholder.com/150"; // default

      if (imageInput.files && imageInput.files[0]) {
        imgURL = URL.createObjectURL(imageInput.files[0]);
      }

      const card = document.createElement("div");
      card.className = "alumni-card bg-gray-800 p-4 rounded-xl shadow-lg";
      card.setAttribute("data-search", `${name.toLowerCase()} ${company.toLowerCase()} ${skills.toLowerCase()}`);
      card.innerHTML = `
        <input type="checkbox" class="mb-2" data-email="${email}">
        <img src="${imgURL}" alt="Alumni" class="w-24 h-24 rounded-full mx-auto">
        <h3 class="text-lg font-bold mt-3">${name}</h3>
        <p class="text-gray-300">Company: ${company}</p>
        <p class="text-gray-300">Email: ${email}</p>
        <p class="text-gray-300">Experience: ${experience}</p>
        <p class="text-gray-300">Skills: ${skills}</p>
      `;
      document.getElementById("alumniCards").appendChild(card);
      e.target.reset();
    });

    // Smart Search
    document.getElementById("searchInput").addEventListener("input", function () {
      const query = this.value.toLowerCase();
      document.querySelectorAll(".alumni-card").forEach(card => {
        if (card.getAttribute("data-search").includes(query)) {
          card.style.display = "block";
        } else {
          card.style.display = "none";
        }
      });
    });

    // Send Email
    function sendEmail() {
      const studentEmails = document.getElementById("studentEmails").value.split(",").map(s => s.trim()).filter(Boolean);
      const message = document.getElementById("message").value.trim();
      const selectedAlumni = [...document.querySelectorAll("input[type=checkbox]:checked")]
        .map(cb => cb.getAttribute("data-email"));

      if (selectedAlumni.length === 0) {
        alert("Please select at least one alumni.");
        return;
      }
      if (studentEmails.length === 0) {
        alert("Please enter student emails.");
        return;
      }
      if (!message) {
        alert("Please enter a message to send.");
        return;
      }

      const recipients = [...studentEmails, ...selectedAlumni].join(",");
      const subject = "Alumni Connection";
      const body = encodeURIComponent(message);

      window.location.href = `mailto:${recipients}?subject=${subject}&body=${body}`;
    }
  </script>

