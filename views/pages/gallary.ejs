  </section>

  <!-- Lightbox Modal -->
  <div id="lightbox" class="hidden fixed inset-0 bg-black bg-opacity-90 flex items-center justify-center z-50">
    <button onclick="closeLightbox()" class="absolute top-5 right-5 text-white text-3xl font-bold">‚úñ</button>
    <img id="lightbox-img" src="" alt="Full View" class="max-h-[90%] max-w-[90%] rounded-lg shadow-lg">
  </div>

  <!-- Script for Dark/Light Mode + Lightbox -->
  <script>
    // Dark/Light toggle
    const btn = document.getElementById("toggleTheme");
    const body = document.getElementById("page-body");
    let dark = true;

    btn.addEventListener("click", () => {
      dark = !dark;
      if (dark) {
        body.classList.remove("bg-white", "text-black");
        body.classList.add("bg-gray-900", "text-white");
        btn.textContent = "üåô Dark Mode";
      } else {
        body.classList.remove("bg-gray-900", "text-white");
        body.classList.add("bg-white", "text-black");
        btn.textContent = "‚òÄÔ∏è Light Mode";
      }
    });

    // Lightbox
    function openLightbox(src) {
      document.getElementById("lightbox-img").src = src;
      document.getElementById("lightbox").classList.remove("hidden");
    }
    function closeLightbox() {
      document.getElementById("lightbox").classList.add("hidden");
    }
  </script>
</body>
</html>
