<!doctype html>
<html lang="en" class="h-full" data-theme="dark">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Events ‚Ä¢ Cummins College of Engineering, Nagpur</title>

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: { container: { center: true, padding: "1rem" } }
      }
    }
  </script>

  <!-- Persist theme -->
  <script>
    (function () {
      const saved = localStorage.getItem("theme");
      const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
      const theme = saved || (prefersDark ? "dark" : "light");
      document.documentElement.dataset.theme = theme;
      document.documentElement.classList.toggle("dark", theme === "dark");
    })();
  </script>

  <style>
    :root {
  --bg: #0b1220;      /* dark background */
  --card: #111827;
  --muted: #93a2b1;
  --text: #e5e7eb;    /* light text */
  --ring: #243b53;
}

:root[data-theme="light"] {
  --bg: white;       /* white background */
  --card: #f8fafc;     /* light card */
  --muted: #475569;    /* dark gray for secondary text */
  --text: #0f172a;     /* dark text so it stays visible */
  --ring: #e2e8f0;
}

html {
  background: var(--bg);
  color: var(--text);  /* ‚úÖ ensures text always visible */
  transition: background 0.3s ease, color 0.3s ease;
}

  </style>
</head>
<body class="min-h-full bg-[var(--bg)]">

  <!-- Header -->
  <header class="border-b border-[var(--ring)]/40 sticky top-0 backdrop-blur bg-[var(--bg)]/80 z-40">
    <div class="container flex items-center justify-between py-4 gap-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-indigo-600/90"></div>
        <div>
          <h1 class="text-xl font-semibold">Cummins College of Engineering, Nagpur</h1>
          <p class="text-sm text-[var(--muted)]">Events & Activities Hub</p>
        </div>
      </div>

    
    </div>
  </header>

  <!-- Hero -->
  <section class="container py-10 text-center md:text-left">
    <div class="grid md:grid-cols-2 gap-6 items-center">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold leading-tight">
          Discover sports & academic energy at CCOEWE Nagpur
        </h2>
        <p class="mt-3 text-[var(--muted)]">
          From spirited sports meets to deep-dive workshops, symposiums, and hackathons ‚Äî
          here‚Äôs what‚Äôs happening across our campus.
        </p>
        <div class="mt-6 flex gap-3 justify-center md:justify-start">
          <a href="#student-events" class="px-4 py-2 rounded-xl bg-indigo-600 hover:bg-indigo-500">Student Events</a>
          <a href="#new-event" class="px-4 py-2 rounded-xl border border-[var(--ring)]/60 hover:bg-[var(--card)]">Add an Event</a>
        </div>
      </div>
      <img
        class="rounded-2xl shadow-xl border border-[var(--ring)]/40"
        alt="Cummins College events"
        src="https://cumminscollege.edu.in/app_theme/images/event3.jpg"
      />
    </div>
  </section>



  <!-- Sports Events -->
  <section class="container py-8 event-section">
    <h3 class="text-2xl font-semibold mb-4">Events Highlights</h3>
    <p class="text-[var(--muted)] mb-6">
      Annual sports meet, inter-college tournaments, and fitness drives bring healthy competition to the campus.
    </p>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% [
        { title: "Annual Sports Meet", img: "https://cumminscollege.edu.in/app_theme/images/event4.jpg", desc: "Inter-departmental competitions across athletics, football, and basketball." },
        { title: "Tech Workshop Series", img: "https://cumminscollege.edu.in/UserData/uploads/pages/235/visite4.jpg", desc: "Hands-on sessions on AI, IoT, and robotics conducted on campus." },
        { title: "Cultural Fest", img: "https://cumminscollege.edu.in/app_theme/images/lifetatcampus-5.jpeg", desc: "Dance, drama, and music night showcasing student talent." }
      ].forEach(card¬†=>¬†{¬†%>
        <article class="event-card rounded-2xl overflow-hidden border border-[var(--ring)]/40 bg-[var(--card)]">
          <img class="h-40 w-full object-cover" src="<%= card.img %>" alt="<%= card.title %>" />
          <div class="p-4">
            <h4 class="event-title text-lg font-semibold"><%= card.title %></h4>
            <p class="event-desc text-sm text-[var(--muted)] mt-1"><%= card.desc %></p>
          </div>
        </article>
      <% }) %>
    </div>
  </section>

  <!-- Educational Events -->
  <section class="container py-8 event-section">
    <h3 class="text-2xl font-semibold mb-4">Educational Events</h3>
    <p class="text-[var(--muted)] mb-6">
      Workshops, guest lectures, paper presentations, and hackathons keep the learning momentum high.
    </p>
  
 <section id="student-events" class="container py-10 event-section">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-2xl font-semibold">Student-submitted Events</h3>
    <a href="#new-event" class="text-sm px-3 py-2 rounded-lg border border-[var(--ring)]/50 hover:bg-[var(--card)]">Add New</a>
  </div>

 <!-- üîç Smart Search (for Student Events only) -->
<div class="mb-6">
  <input 
    type="text" 
    id="studentEventSearch" 
    placeholder="Search events by title or description..." 
    class="w-full sm:w-1/2 px-4 py-2 rounded-lg border border-[var(--ring)]/40 bg-[var(--card)] focus:outline-none focus:ring-2 focus:ring-indigo-500"
  />
</div>

<% if (eevent && eevent.length) { %>
  <div id="eventsGrid" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% eevent.forEach(e => { %>
      <article 
        class="event-card rounded-2xl overflow-hidden border border-[var(--ring)]/40 bg-[var(--card)]" 
        data-title="<%= e.title.toLowerCase() %>" 
        data-desc="<%= e.description.toLowerCase() %>"
      >
        <img class="h-44 w-full object-cover" src="<%= e.image %>" alt="<%= e.title %>"/>
        <div class="p-4">
          <h4 class="event-title text-lg font-semibold"><%= e.title %></h4>
          <p class="text-xs text-[var(--muted)] mt-0.5">Added by <span class="font-medium"><%= e.studentName %></span></p>
          <p class="event-desc text-sm text-[var(--muted)] mt-2"><%= e.description %></p>
          <p class="text-[10px] text-[var(--muted)] mt-3">Posted <%= new Date(e.createdAt).toLocaleString() %></p>
        </div>
      </article>
    <% }) %>
  </div>
<% } else { %>
  <p class="text-[var(--muted)]">No student events yet. Be the first to add one!</p>
<% } %>

<script>
  // ‚úÖ Smart Search Function
  document.getElementById("studentEventSearch").addEventListener("input", function () {
    const query = this.value.toLowerCase();
    const cards = document.querySelectorAll("#eventsGrid .event-card");

    cards.forEach(card => {
      const title = card.dataset.title;
      const desc = card.dataset.desc;
      if (title.includes(query) || desc.includes(query)) {
        card.style.display = "block";
      } else {
        card.style.display = "none";
      }
    });
  });

  // ‚úÖ Theme Toggle
  const toggleBtn = document.getElementById("themeToggle");
  toggleBtn.addEventListener("click", () => {
    const html = document.documentElement;
    const newTheme = html.dataset.theme === "dark" ? "light" : "dark";
    html.dataset.theme = newTheme;
    html.classList.toggle("dark", newTheme === "dark");
    localStorage.setItem("theme", newTheme);
  });
</script>

</script>
  <section id="new-event" class="container py-10">
    <h3 class="text-2xl font-semibold mb-4">Add an Event</h3>
    <form action="/alumni/event" method="POST" enctype="multipart/form-data"
      class="grid md:grid-cols-2 gap-6 bg-[var(--card)] p-6 rounded-2xl border border-[var(--ring)]/40">
      <div class="grid gap-4">
        <div>
          <label class="block text-sm mb-1">Title</label>
          <input name="title" required maxlength="140"
            class="w-full px-3 py-2 rounded-xl border border-[var(--ring)]/50 bg-transparent outline-none"
            placeholder="e.g., Arduino Bootcamp"/>
        </div>
        <div>
          <label class="block text-sm mb-1">Student Name</label>
          <input name="studentName" required maxlength="100"
            class="w-full px-3 py-2 rounded-xl border border-[var(--ring)]/50 bg-transparent outline-none"
            placeholder="Your full name"/>
        </div>
        <div>
          <label class="block text-sm mb-1">Description</label>
          <textarea name="description" required maxlength="2000" rows="5"
            class="w-full px-3 py-2 rounded-xl border border-[var(--ring)]/50 bg-transparent outline-none"
            placeholder="Tell everyone what's happening..."></textarea>
        </div>
      </div>
      <div class="grid gap-4">
        <div>
          <label class="block text-sm mb-1">Upload Image</label>
          <input type="file" name="image" accept="image/*"
            class="w-full block text-sm file:mr-4 file:py-2 file:px-3 file:rounded-lg file:border-0
              file:bg-indigo-600 file:text-white hover:file:bg-indigo-500"/>
          <p class="text-xs text-[var(--muted)] mt-1">or paste an image URL below</p>
        </div>
        <div>
          <label class="block text-sm mb-1">Image URL</label>
          <input name="imageUrl" type="url"
            class="w-full px-3 py-2 rounded-xl border border-[var(--ring)]/50 bg-transparent outline-none"
            placeholder="https://..."/>
        </div>
        <div class="flex items-end">
          <button class="w-full px-4 py-2 rounded-xl bg-indigo-600 hover:bg-indigo-500">Submit Event</button>
        </div>
      </div>
    </form>
  </section>

  <footer class="container py-10 text-center text-sm text-[var(--muted)]">
    ¬© <%= new Date().getFullYear() %> Cummins College of Engineering, Nagpur. All rights reserved.
  </footer>
  
   <script>
  // üîç Smart Search Function
  document.getElementById("studentEventSearch").addEventListener("input", function () {
    const query = this.value.toLowerCase();
    const cards = document.querySelectorAll("#eventsGrid .event-card");

    cards.forEach(card => {
      const title = card.dataset.title;
      const desc = card.dataset.desc;
      if (title.includes(query) || desc.includes(query)) {
        card.style.display = "block";
      } else {
        card.style.display = "none";
      }
    });
  });
</script>
</body>
</html>
