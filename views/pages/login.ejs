<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Student Portal — Login</title>
<style>
  :root{
    --bg:#0f1115;
    --panel:#141821;
    --text:#e8e8ea;
    --muted:#9597a1;
    --accent:#7c4dff;   /* purple */
    --accent-2:#9d7bff;
    --input:#0f131c;
    --ring:#a688ff66;
    --radius:16px;
    --shadow: 0 10px 30px rgba(0,0,0,.45);
  }
  *{box-sizing:border-box}
  html,body{height:100%}
  body{
    margin:0;
    font:16px/1.5 system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,"Helvetica Neue",Arial,sans-serif;
    color:var(--text);
    background:var(--bg);
    display:grid;
    place-items:center;
  }

  .shell{
    width:min(1100px, 95vw);
    min-height:560px;
    background:#0b0d12;
    border-radius:calc(var(--radius) + 8px);
    overflow:hidden;
    box-shadow:var(--shadow);
    display:grid;
    grid-template-columns: 440px 1fr;
  }

  /* Left: login panel */
  .left{
    background:var(--panel);
    padding:48px 42px;
    display:flex;
    flex-direction:column;
    justify-content:center;
    gap:28px;
  }
  .title{font-weight:800; font-size:34px; letter-spacing:.3px}
  .subtitle{color:var(--muted); margin-top:-12px}

  .field{
    display:grid; gap:8px; margin:16px 0;
  }
  label{font-size:14px; color:var(--muted)}
  .control{
    position:relative;
  }
  input{
    width:100%;
    background:var(--input);
    border:1px solid #212633;
    color:var(--text);
    padding:14px 44px 14px 14px;
    border-radius:12px;
    outline:none;
    transition:border .15s, box-shadow .15s, transform .02s;
  }
  input:focus{
    border-color:var(--accent);
    box-shadow:0 0 0 6px var(--ring);
  }
  .toggle-eye{
    position:absolute; right:10px; top:50%; translate:0 -50%;
    border:0; background:transparent; color:var(--muted); cursor:pointer; padding:6px;
  }
  .row{
    display:flex; align-items:center; justify-content:space-between; margin-top:6px;
    gap:10px;
  }
  .link{color:#c9b8ff; text-decoration:none; font-size:14px}
  .link:hover{text-decoration:underline}

  .btn{
    width:100%; border:0; cursor:pointer;
    background:linear-gradient(135deg, var(--accent), var(--accent-2));
    color:white; padding:14px 16px; border-radius:12px; font-weight:700; letter-spacing:.3px;
    box-shadow:0 8px 20px rgba(124,77,255,.35);
    transition:transform .05s ease-in-out, filter .15s;
  }
  .btn:active{ transform:translateY(1px) }
  .muted{color:var(--muted); font-size:14px}
  .ghost{
    background:#232836; color:#eae9ff; border-radius:10px; padding:10px 14px; text-decoration:none;
  }
  .ghost:hover{filter:brightness(1.08)}

  /* Right: welcome/illustration */
  .right{
    position:relative;
    background:radial-gradient(1200px 600px at 20% 10%, #a688ff22 0%, transparent 50%),
               radial-gradient(900px 700px at 90% 20%, #7c4dff22 0%, transparent 50%),
               linear-gradient(135deg, #7c4dff 0%, #6a50ff 45%, #7a63ff 100%);
    padding:42px;
    display:flex;
    flex-direction:column;
    justify-content:center;
    color:white;
  }
  .glass{
    background:rgba(255,255,255,.08);
    border:1px solid rgba(255,255,255,.18);
    border-radius:24px;
    padding:36px;
    box-shadow:inset 0 1px 0 rgba(255,255,255,.12);
  }
  .welcome{
    font-size:46px; font-weight:900; line-height:1.05; margin:0 0 8px 0;
  }
  .welcome em{font-style:normal; opacity:.9; font-weight:700}
  .small{opacity:.9; margin-bottom:26px}

  /* simple line illustration */
  .art{
    margin-top:14px; width:100%; max-width:520px; aspect-ratio:16/10; display:block;
    border-radius:18px; background:rgba(255,255,255,.06);
    border:1px dashed rgba(255,255,255,.35);
    position:relative; overflow:hidden;
  }
  .art svg{position:absolute; inset:0; width:100%; height:100%}

  /* Responsive */
  @media (max-width: 900px){
    .shell{ grid-template-columns:1fr }
    .right{ order:-1; min-height:260px }
    .left{ padding:32px 24px }
  }
</style>
</head>
<body>
 <main class="shell">
    <!-- Right: Welcome / visual -->
    <section class="right">
      <div class="glass">
        <div class="welcome">Welcome to<br><em>Alumni portal</em></div>
        <div class="small">Signup to access your account</div>

        <!-- Decorative illustration (inline SVG, no external files) -->
        <div class="art" aria-hidden="true">
          <svg viewBox="0 0 800 500" fill="none" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <!-- server tower -->
            <rect x="250" y="160" width="320" height="240" rx="20" opacity=".85"/>
            <circle cx="290" cy="210" r="20" opacity=".85"/>
            <rect x="332" y="197" width="200" height="26" rx="12" opacity=".55"/>
            <rect x="332" y="245" width="220" height="26" rx="12" opacity=".55"/>
            <rect x="332" y="293" width="180" height="26" rx="12" opacity=".55"/>
            <rect x="332" y="341" width="220" height="26" rx="12" opacity=".55"/>

            <!-- sitting student -->
            <path d="M540 140c15-8 42-6 54 8 10 11 8 28-1 43l28 26-36 16-26-24-33 20" opacity=".9"/>
            <path d="M520 208c14-10 42-12 58-2 23 14 24 47 7 73l112 0" opacity=".9"/>
            <circle cx="585" cy="140" r="18" opacity=".95"/>

            <!-- walking student with magnifier -->
            <circle cx="300" cy="330" r="22" opacity=".95"/>
            <path d="M280 360 l-24 70 M318 360 l20 76" opacity=".95"/>
            <circle cx="220" cy="300" r="46" opacity=".7"/>
            <line x1="250" y1="330" x2="280" y2="360" opacity=".9"/>
          </svg>
        </div>
      </div>
    </section>

    <!-- Left: Login -->
    <section class="left">
      <header>
        <div class="title">Login</div>
        <p class="subtitle">Enter your account details</p>
      </header>

      <form action="/alumni/login" method="POST" id="loginForm" autocomplete="on" novalidate>
        <div class="field">
          <label for="username">Username</label>
          <div class="control">
            <input id="username" name="username" type="text" required placeholder="Enter your username" />
          </div>
        </div>

        <div class="field">
          <label for="password">Password</label>
          <div class="control">
            <input id="password" name="password" type="password" required minlength="6" placeholder="Enter your password" />
            <button type="button" class="toggle-eye" aria-label="Show password" onclick="togglePass()">
              <svg id="eyeIcon" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7Z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
            </button>
          </div>
          <div class="row">
            <label class="muted"><input type="checkbox" id="remember" /> Remember me</label>
            <a href="#" class="link">Forgot Password?</a>
          </div>
        </div>

      <a href="/"> <button class="btn" type="submit">Login</button></a>
      </form>

      <div class="row" style="margin-top:6px">
        <span class="muted">Don't have an account?</span>
        <a class="ghost" href="/">Sign up</a>
      </div>
    </section>
  </main>

<script>
  function togglePass(){
    const inp = document.getElementById('password');
    const eye = document.getElementById('eyeIcon');
    if(inp.type === 'password'){
      inp.type = 'text';
      eye.innerHTML = '<path d="M17.94 17.94a10.46 10.46 0 0 1-5.94 1.94C6 19.88 2 12 2 12s4-7.88 10-7.88c2.12 0 4.09.67 5.73 1.8M1 1l22 22"/>'; 
    }else{
      inp.type = 'password';
      eye.innerHTML = '<path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7Z"/><circle cx="12" cy="12" r="3"/>';
    }
  }

  // validation + redirect
  document.getElementById('loginForm').addEventListener('submit', function(e){
    e.preventDefault();
    const u = this.username.value.trim();
    const p = this.password.value;
    if(!u || p.length < 6){
      alert('Please enter a valid username and a password of at least 6 characters.');
      return;
    }
    // ✅ Redirect after success
    window.location.href = "/alumni/home"; // change to your page
  });
</script>
</body>
</html>
