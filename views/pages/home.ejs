  <style>
    .carousel { position: relative; width: 1200px; height: 600px; }
    .carousel img { position: absolute; width: 100%; height: 100%; object-fit: cover; opacity: 0; transition: opacity 1s; }
    .carousel img.active { opacity: 1; }
