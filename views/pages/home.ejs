<!-- Theme Toggle Script -->
<script>
  const toggleBtn = document.getElementById("themeToggle");
  const wrapper = document.getElementById("pageWrapper");
  const sidebar = document.getElementById("sidebar");
  const bodyTag = document.getElementById("bodyTag");
  const cards = document.querySelectorAll(".cardItem");
  const heroCard = document.getElementById("heroCard");
  const heroText = document.getElementById("heroText");
  const tagBadge = document.getElementById("tagBadge");

  toggleBtn.addEventListener("click", () => {
    // Main wrapper
    wrapper.classList.toggle("bg-gray-600");
    wrapper.classList.toggle("bg-white");
    wrapper.classList.toggle("text-gray-200");

    // Sidebar
    sidebar.classList.toggle("bg-gray-800");
    sidebar.classList.toggle("bg-gray-100");
    sidebar.classList.toggle("border-gray-700");
    sidebar.classList.toggle("border-gray-300");

    // Cards
    cards.forEach(card => {
      card.classList.toggle("bg-slate-900/60");
      card.classList.toggle("light-card");
      card.classList.toggle("text-black");
    });

    // Hero section
    heroCard.classList.toggle("bg-gradient-to-br");
    heroCard.classList.toggle("bg-white");
    heroCard.classList.toggle("border-slate-800");
    heroCard.classList.toggle("border-gray-300");
    heroText.classList.toggle("text-slate-900");
    heroText.classList.toggle("text-gray-900");

    // Badge
    tagBadge.classList.toggle("bg-slate-800/70");
    tagBadge.classList.toggle("bg-gray-200");
    tagBadge.classList.toggle("text-slate-200");
    tagBadge.classList.toggle("text-gray-800");
    tagBadge.classList.toggle("ring-slate-700");
    tagBadge.classList.toggle("ring-gray-300");
  });
</script>
