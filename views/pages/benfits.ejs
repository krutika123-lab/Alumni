<% layout("/layouts/boilerplate.ejs") %>

<body class="bg-gray-900 text-gray-100 font-sans">
    <section class="bg-gray-800 py-16 text-center">
        <div class="container mx-auto">
            <h2 class="text-4xl font-bold mb-4">Benefits for Students & Alumni</h2>
            <p class="text-gray-300 max-w-2xl mx-auto">
                The Cummins College Alumni Portal connects students and alumni, offering exclusive benefits, resources, and opportunities to grow academically, professionally, and socially.
            </p>
        </div>
    </section>
    <section class="py-16">
        <div class="container mx-auto">
            <h3 class="text-3xl font-bold text-center mb-12">Benefits for Students</h3>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Mentorship Programs</h4>
                    <p class="text-gray-300">Connect with experienced alumni for guidance on career choices, internships, and academic growth.</p>
                </div>
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Workshops & Seminars</h4>
                    <p class="text-gray-300">Access exclusive workshops, webinars, and seminars organized by alumni and industry professionals.</p>
                </div>
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Networking Opportunities</h4>
                    <p class="text-gray-300">Build meaningful connections with alumni for guidance, references, and professional growth.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Benefits for Alumni -->
    <section class="bg-gray-800 py-16">
        <div class="container mx-auto">
            <h3 class="text-3xl font-bold text-center mb-12">Benefits for Alumni</h3>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-gray-900 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Career Opportunities</h4>
                    <p class="text-gray-300">Stay informed about job openings, projects, and collaborations through the alumni network.</p>
                </div>
                <div class="bg-gray-900 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Stay Connected</h4>
                    <p class="text-gray-300">Reconnect with peers, batchmates, and faculty to maintain lifelong relationships and networks.</p>
                </div>
                <div class="bg-gray-900 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Give Back</h4>
                    <p class="text-gray-300">Contribute to the college by mentoring, funding scholarships, or sharing industry insights with students.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
   
    <!-- Footer -->
    <footer class="bg-gray-800 py-6 mt-12">
        <div class="container mx-auto text-center text-gray-400">
            &copy; 2025 Cummins College of Engineering, Nagpur. All rights reserved.
        </div>
    </footer>

</body>
</html>
