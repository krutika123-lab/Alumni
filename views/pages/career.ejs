<% layout("/layouts/boilerplate.ejs") %>

<body class="bg-gray-900 text-gray-100 font-sans">


    <section class="bg-gray-800 py-16 text-center">
        <div class="container mx-auto">
            <h2 class="text-4xl font-bold mb-4">Career Opportunities & Placements</h2>
            <p class="text-gray-300 max-w-2xl mx-auto">
                Explore career guidance, placement updates, and higher education opportunities like M.Tech and GATE for students and alumni.
            </p>
        </div>
    </section>

    <!-- Career Opportunities for Alumni & Students -->
    <section class="py-16">
        <div class="container mx-auto">
            <h3 class="text-3xl font-bold text-center mb-12">Career Opportunities</h3>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Job Openings</h4>
                    <p class="text-gray-300">Access curated job listings for alumni and current students from top companies in engineering, IT, and research.</p>
                </div>
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Internships</h4>
                    <p class="text-gray-300">Find internship opportunities to gain practical experience and build a strong professional profile.</p>
                </div>
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Alumni Mentorship</h4>
                    <p class="text-gray-300">Get career advice, resume reviews, and interview preparation tips from successful alumni.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Placements & Statistics -->
    <section class="bg-gray-800 py-16">
        <div class="container mx-auto text-center">
            <h3 class="text-3xl font-bold mb-12">Placements</h3>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-gray-900 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Recent Placements</h4>
                    <p class="text-gray-300">Explore recent companies visiting the campus and students placed across top industries.</p>
                </div>
                <div class="bg-gray-900 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Placement Stats</h4>
                    <p class="text-gray-300">View placement percentages, highest packages, and sector-wise statistics to help plan your career.</p>
                </div>
                <div class="bg-gray-900 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Recruiters</h4>
                    <p class="text-gray-300">Connect with companies that have previously hired alumni and current students from Cummins College.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- M.Tech & GATE Guidance -->
    <section class="py-16">
        <div class="container mx-auto text-center">
            <h3 class="text-3xl font-bold mb-12">Higher Education: M.Tech & GATE</h3>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">GATE Preparation</h4>
                    <p class="text-gray-300">Resources, past papers, and guidance from alumni who have successfully cleared GATE in various streams.</p>
                </div>
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">M.Tech Guidance</h4>
                    <p class="text-gray-300">Advice on M.Tech specializations, colleges, and application strategies from experienced alumni.</p>
                </div>
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 transition">
                    <h4 class="text-xl font-semibold mb-2">Scholarships & Fellowships</h4>
                    <p class="text-gray-300">Information on scholarships and financial aid opportunities for higher education and research.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- Footer -->
    <footer class="bg-gray-800 py-6 mt-12">
        <div class="container mx-auto text-center text-gray-400">
            &copy; 2025 Cummins College of Engineering, Nagpur. All rights reserved.
        </div>
    </footer>

</body>
</html>
