<% layout("/layouts/boilerplate.ejs") %>


<body class="bg-gradient-to-br from-gray-900 via-black to-gray-800 text-white transition duration-500" id="page-body">

  <!-- Navbar -->
  <header class="bg-gray-800/90 backdrop-blur-md shadow-md sticky top-0 z-50">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-purple-400">CCOEW Nagpur</h1>
      <button id="toggleTheme" class="px-4 py-2 rounded bg-purple-600 hover:bg-purple-700 text-white transition">
        üåô Dark Mode
      </button>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="text-center py-12">
    <h2 class="text-4xl font-extrabold text-purple-300 drop-shadow">Placement Preparation Suggestions</h2>
    <p class="text-lg mt-3 text-gray-300 max-w-2xl mx-auto">
      Insights, tips, and experiences shared by our Alumni to help students crack interviews, prepare for M.Tech & GATE, and succeed in off-campus placements.
    </p>
  </section>

  <!-- Sections -->
  <main class="max-w-4xl mx-auto px-6">
    <% const sections = [
      { id: "interview", title: "üíº Placement Interview Preparation/Cracking Internships Suggestions" },
      { id: "mtech", title: "üìò M.Tech & GATE Preparation" },
      { id: "offcampus", title: "üöÄ Off-Campus Placement & Skill Development" }
    ]; %>

    <% sections.forEach(sec => { %>
      <div class="mb-8 border border-gray-700 rounded-2xl shadow-lg overflow-hidden">
        <button onclick="toggleSection('<%= sec.id %>')" 
          class="w-full text-left px-6 py-4 bg-gray-800 hover:bg-gray-700 font-semibold flex justify-between items-center">
          <span><%= sec.title %></span>
          <span id="<%= sec.id %>-icon">+</span>
        </button>

        <div id="<%= sec.id %>-content" class="hidden p-6 bg-gray-900/70">
          <!-- Form -->
          <form action="/alumni/alumniview" method="POST" class="mb-6 space-y-3">
            <input type="hidden" name="section" value="<%= sec.id %>">

            <div>
              <label class="block text-sm font-medium text-gray-300">Your Name</label>
              <input type="text" name="name" placeholder="Enter your name" required
                class="w-full px-4 py-2 rounded-lg border focus:ring-2 focus:ring-purple-500 text-black">
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300">Your Suggestion / Experience</label>
              <textarea name="description" placeholder="Share your valuable experience..." required
                class="w-full px-4 py-2 rounded-lg border focus:ring-2 focus:ring-purple-500 text-black"></textarea>
            </div>

            <button type="submit" 
              class="px-6 py-2 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg shadow-md transition">
              ‚ûï Add Suggestion
            </button>
          </form>

          <!-- Posts -->
          <div class="space-y-4">
            <% posts.filter(p => p.section === sec.id).forEach(p => { %>
              <div class="p-4 bg-gradient-to-r from-gray-800 to-gray-900 rounded-xl shadow-lg border border-gray-700">
                <h3 class="font-bold text-lg text-purple-300"><%= p.name %></h3>
                <p class="mt-1 text-gray-200 leading-relaxed"><%= p.description %></p>
                <small class="text-gray-400 block mt-2">üïí <%= p.createdAt.toDateString() %></small>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    <% }) %>
  </main>
  <script>
    // Section Toggle (accordion style)
    function toggleSection(id) {
      const section = document.getElementById(id + "-content");
      const icon = document.getElementById(id + "-icon");
      section.classList.toggle("hidden");
      icon.textContent = section.classList.contains("hidden") ? "+" : "‚àí";
    }

    // Dark/Light Mode Toggle
    const btn = document.getElementById("toggleTheme");
    const body = document.getElementById("page-body");
    let dark = true;

    btn.addEventListener("click", () => {
      dark = !dark;
      if (dark) {
        body.classList.remove("bg-white", "text-black");
        body.classList.add("bg-gradient-to-br", "from-gray-900", "via-black", "to-gray-800", "text-white");
        btn.textContent = "üåô Dark Mode";
      } else {
        body.classList.remove("bg-gradient-to-br", "from-gray-900", "via-black", "to-gray-800", "text-white");
        body.classList.add("bg-white", "text-white");
        btn.textContent = "‚òÄÔ∏è Light Mode";
      }
    });
  </script>
</body>
</html>
