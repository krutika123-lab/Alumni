</body>

  <!-- Navbar Section -->
  <nav class="w-full bg-gradient-to-r from-indigo-900 via-purple-900 to-fuchsia-900 shadow-lg sticky top-0 z-50">
    <div class="container mx-auto flex items-center justify-between px-6 py-3">

      <!-- Logo + Title -->
      <div class="flex items-center space-x-3 group">
        <!-- Cummins Logo -->
        <div class="rounded-full shadow-lg transform transition duration-500 group-hover:scale-110 group-hover:shadow-fuchsia-500/50">
          <img src="https://tse4.mm.bing.net/th/id/OIP.WVzFmEiC6arIgAtUlieFXAHaHa?pid=Api&P=0&h=180"
            alt="Cummins Logo" class="h-20 w-20 rounded-full object-cover">
        </div>
        <!-- Portal Title -->
        <h1
          class="text-2xl sm:text-3xl md:text-4xl font-extrabold bg-clip-text text-transparent 
          bg-gradient-to-r from-fuchsia-400 via-indigo-300 to-blue-400 tracking-wide transition duration-500 
          group-hover:from-pink-400 group-hover:via-purple-300 group-hover:to-cyan-400">
          CCOEW Nagpur<br class="hidden sm:block"> Alumni Portal
        </h1>
      </div>

      <!-- Nav Links -->
      <ul class="hidden md:flex space-x-8 font-medium">
        <li><a class="text-gray-200 hover:text-fuchsia-400 hover:underline hover:scale-110 text-2xl transition duration-300"
            href="/alumni/home">Home</a></li>
        <li><a class="text-gray-200 hover:text-fuchsia-400 hover:underline hover:scale-110 text-2xl transition duration-300"
            href="/alumni/career">Career</a></li>
        <li><a class="text-gray-200 hover:text-fuchsia-400 hover:underline hover:scale-110 text-2xl transition duration-300"
            href="/alumni/event">Events</a></li>
        <li><a class="text-gray-200 hover:text-fuchsia-400 hover:underline hover:scale-110 text-2xl transition duration-300"
            href="/alumni/benfits">Benefits</a></li>
      </ul>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button id="menu-btn"
          class="text-gray-200 hover:text-white focus:outline-none text-2xl transition duration-300 transform hover:scale-125">
          <i id="menu-icon" class="fas fa-bars"></i>
        </button>
      </div>
    </div>

    <!-- Mobile Dropdown -->
    <div id="menu" class="hidden flex-col space-y-4 px-6 pb-4 bg-gray-800 md:hidden">
      <a class="text-gray-200 hover:text-fuchsia-400 hover:pl-3 transition duration-300" href="/alumni/home">Home</a>
      <a class="text-gray-200 hover:text-fuchsia-400 hover:pl-3 transition duration-300" href="/alumni/career">Career</a>
      <a class="text-gray-200 hover:text-fuchsia-400 hover:pl-3 transition duration-300" href="/alumni/events">Events</a>
      <a class="text-gray-200 hover:text-fuchsia-400 hover:pl-3 transition duration-300" href="/alumni/benfits">Benefits</a>
    </div>
  </nav>

  <script>
    // Toggle mobile menu
    const menuBtn = document.getElementById("menu-btn");
    const menu = document.getElementById("menu");
    const menuIcon = document.getElementById("menu-icon");

    menuBtn.addEventListener("click", function () {
      menu.classList.toggle("hidden");

      // Toggle icon
      if (menu.classList.contains("hidden")) {
        menuIcon.classList.remove("fa-times");
        menuIcon.classList.add("fa-bars");
      } else {
        menuIcon.classList.remove("fa-bars");
        menuIcon.classList.add("fa-times");
      }
    });
  </script>
</body>
